<h1 class="text-center my-3">Atualizar Filme: {{filme.titulo}}</h1>
<form action="/update" method="POST">
    <input type="hidden" name="id_filme" value="{{filme.id_filme}}" />
    <div class="row w-50 d-block m-auto g-3">
        <div class="col-12">
            <label class="form-label" for="titulo">Titulo:</label>
            <input class="form-control" type="titulo" name="titulo" id="titulo" value="{{filme.titulo}}" />
        </div>
        <div class="col-12">
            <label class="form-label" for="autor">Autor:</label>
            <input class="form-control" type="autor" name="autor" id="autor" value="{{filme.autor}}" />
        </div>
        <div class="col-12">
            <label class="form-label" for="assunto">Assunto:</label>
            <input class="form-control" type="assunto" name="assunto" id="assunto" value="{{filme.assunto}}" />
        </div>
        <div class="col-12">
            <label class="form-label" for="descricao">Descrição:</label>
            <textarea class="form-control" name="descricao" id="descricao">{{filme.descricao}}</textarea>
        </div>
        <div class="col-12">
            <label class="form-label" for="link">Link do filme:</label>
            <input class="form-control" type="link" name="link" id="link" value="{{filme.link}}" />
        </div>
        <div>
            <input class="btn btn-primary my-3" type="submit" value="Atualizar filme" />
        </div>
    </div>
</form>